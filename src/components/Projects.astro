---
const projects = [
  {
    title: 'SIM Quran - Full Stack',
    description: "Web-based information system for monitoring students' memorization progress.",
    techStack: [
      'Next.js (App Router)',
      'shadcn/ui',
      'Tailwind CSS',
      'Neon (PostgreSQL)',
      'Prisma ORM',
      'Vercel',
    ],
    github: 'https://github.com/danisharfa/sim-siswa-sdit',
    // demo: 'https://demo.example.com',
    // image: 'gambar',
  },
  {
    title: 'Florify - Backend & Cloud',
    description:
      'An AI-powered mobile application that provides personalized plant care recommendations through cloud integration and machine learning.',
    techStack: [
      'Express.js',
      'Flask',
      'GCP',
      'Cloud Firestore',
      'Cloud Storage',
      'App Engine',
      'Cloud Run',
    ],
    github: 'https://github.com/ProjectFlorify/CC_Florify',
  },
];
---

<section id="projects" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="container mx-auto max-w-7xl">
    <h2 class="text-4xl sm:text-5xl font-bold text-white mb-4 text-center">
      Recent <span class="text-accent">Projects</span>
    </h2>
    <div class="w-20 h-1 bg-accent mx-auto mb-12"></div>

    <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="bg-dark-surface rounded-lg border border-dark-border hover:border-accent transition-all duration-300 transform hover:scale-[1.03] overflow-hidden group">
            <div class="p-6">
              {/* <div class="text-6xl mb-4">{project.image}</div> */}
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-accent transition-colors">
                {project.title}
              </h3>
              <p class="text-dark-text-muted mb-4 line-clamp-3">{project.description}</p>

              <div class="flex flex-wrap gap-2 mb-6">
                {project.techStack.map((tech) => (
                  <span class="px-3 py-1 text-sm bg-dark-bg text-accent border border-dark-border rounded-full">
                    {tech}
                  </span>
                ))}
              </div>

              <div class="flex gap-4">
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 text-dark-text-muted hover:text-accent transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                  Repository
                </a>
                {/* <a
                  href={project.demo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 text-accent hover:text-accent-hover transition-colors"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                  Live Demo
                </a> */}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
